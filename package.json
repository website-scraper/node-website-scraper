{
  "name": "website-scraper",
  "version": "4.2.3",
  "description": "Download website to a local directory (including all css, images, js, etc.)",
  "readmeFilename": "README.md",
  "main": "index.js",
  "scripts": {
    "test": "nyc --reporter=html --reporter=text mocha --recursive --timeout 7000 ./test/unit/ ./test/functional && npm run eslint",
    "test-e2e": "mocha --timeout 300000 ./test/e2e/*-test.js",
    "eslint": "eslint lib/** index.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/website-scraper/node-website-scraper.git"
  },
  "keywords": [
    "scrape",
    "scraper",
    "download",
    "web",
    "url",
    "page",
    "site",
    "html",
    "css",
    "image",
    "js"
  ],
  "author": "Sophia Antipenko <sophia@antipenko.pp.ua>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/website-scraper/node-website-scraper/issues"
  },
  "homepage": "https://github.com/website-scraper/node-website-scraper",
  "dependencies": {
    "bluebird": "^3.0.1",
    "cheerio": "~0.22.0",
    "css-url-parser": "^1.0.0",
    "debug": "^4.3.1",
    "fs-extra": "^9.0.0",
    "he": "^1.2.0",
    "lodash": "^4.17.21",
    "normalize-url": "^6.0.0",
    "p-queue": "^6.6.0",
    "request": "^2.88.2",
    "sanitize-filename": "^1.6.3",
    "srcset": "^3.0.0"
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "eslint": "^7.24.0",
    "mocha": "^8.3.2",
    "nock": "^13.0.11",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "should": "^13.2.3",
    "sinon": "^10.0.1"
  },
  "files": [
    "index.js",
    "lib"
  ],
  "engines": {
    "node": ">=12"
  }
}
